#!/bin/sh
# postinst script for builder-ci
#
# see: dh_installdeb(1)

set -e

case "$1" in
    configure)
        useradd --system builder || true
        (set -a ; . /etc/builder-ci/builder-ci.conf ; /usr/share/builder-ci/venv/bin/python3 /usr/share/builder-ci/manage.py migrate)
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#