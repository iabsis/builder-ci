[Unit]
Description=Builder CI - Celery beat
After=network.target

[Service]
User=builder
Environment=VIRTUAL_ENV=/usr/share/builder-ci/venv
EnvironmentFile=/etc/builder-ci/builder-ci.conf
WorkingDirectory=/usr/share/builder-ci/
ExecStart=/usr/share/builder-ci/venv/bin/celery -A core.celery beat --loglevel=info --scheduler django_celery_beat.schedulers:DatabaseScheduler

[Install]
WantedBy=multi-user.target
